{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",
    "outDir": "../demo_policy/dist",
    "types": ["jest", "node"],
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
